#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<profilesXml xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/profiles-1.0.0.xsd">
      <profiles>
        <profile>
            <id>production</id>
            <activation>
                <property>
                    <name>profile</name>
                    <value>production</value>
                </property>
            </activation>
            <properties>
                <jdbc.migraene.driver>
                    com.sybase.jdbc2.jdbc.SybDriver
                </jdbc.migraene.driver>
                <jdbc.migraene.url>
                    jdbc:sybase:Tds:sybase.schlund.de:1995/MIGRAENE
                </jdbc.migraene.url>
                <jdbc.migraene.username>user</jdbc.migraene.username>
                <jdbc.migraene.password>pass</jdbc.migraene.password>
                <jdbc.migraene.initialSize>4</jdbc.migraene.initialSize>
                <jdbc.migraene.maxActive>16</jdbc.migraene.maxActive>
                <jdbc.migraene.maxIdle>4</jdbc.migraene.maxIdle>
                <jdbc.migraene.minIdle>4</jdbc.migraene.minIdle>
                <jdbc.migraene.testWhileIdle>
                    true
                </jdbc.migraene.testWhileIdle>
                <jdbc.migraene.maxWait>-1</jdbc.migraene.maxWait>
            </properties>
        </profile>
        <profile>
            <id>testing</id>
            <activation>
                <property>
                    <name>profile</name>
                    <value>testing</value>
                </property>
            </activation>
            <properties>
                <jdbc.migraene.driver>
                    com.sybase.jdbc2.jdbc.SybDriver
                </jdbc.migraene.driver>
                <jdbc.migraene.url>
                    jdbc:sybase:Tds:schlupatest.schlund.de:1999/MIGRAENE
                </jdbc.migraene.url>
                 <jdbc.migraene.username>user_test</jdbc.migraene.username>
                <jdbc.migraene.password>pass_test</jdbc.migraene.password>
                <jdbc.migraene.initialSize>2</jdbc.migraene.initialSize>
                <jdbc.migraene.maxActive>4</jdbc.migraene.maxActive>
                <jdbc.migraene.maxIdle>1</jdbc.migraene.maxIdle>
                <jdbc.migraene.minIdle>0</jdbc.migraene.minIdle>
                <jdbc.migraene.testWhileIdle>
                    true
                </jdbc.migraene.testWhileIdle>
                <jdbc.migraene.maxWait>-1</jdbc.migraene.maxWait>
            </properties>
        </profile>
        <profile>
            <id>local</id>
            <activation>
                <activeByDefault/>
                <property>
                    <name>profile</name>
                    <value>local</value>
                </property>
            </activation>
            <properties>
                <jdbc.migraene.driver>
                    com.sybase.jdbc2.jdbc.SybDriver
                </jdbc.migraene.driver>
                <jdbc.migraene.url>${symbol_dollar}{local.jdbc.migraene.url}</jdbc.migraene.url>
                <jdbc.migraene.username>${symbol_dollar}{local.jdbc.migraene.username}</jdbc.migraene.username>
                <jdbc.migraene.password>${symbol_dollar}{local.jdbc.migraene.password}</jdbc.migraene.password>
                <jdbc.migraene.initialSize>2</jdbc.migraene.initialSize>
                <jdbc.migraene.maxActive>4</jdbc.migraene.maxActive>
                <jdbc.migraene.maxIdle>1</jdbc.migraene.maxIdle>
                <jdbc.migraene.minIdle>0</jdbc.migraene.minIdle>
                <jdbc.migraene.testWhileIdle>
                    true
                </jdbc.migraene.testWhileIdle>
                <jdbc.migraene.maxWait>-1</jdbc.migraene.maxWait>
            </properties>
        </profile>
       </profiles>
    </profilesXml>
